            <tr>
              <% if (typeof singleUser !=='undefined' && singleUser) { %>


                <th>Date</th>
                <th>Signed In</th>
                <th>Signed Out</th>
                <th><b>Time Worked (hrs)</b></th> <!-- âœ… New -->
                <th>Actions</th>

                <% } else { %>
