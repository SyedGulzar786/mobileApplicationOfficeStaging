<% title='Attendance Management' %>

  <% if (typeof singleUser !=='undefined' && singleUser) { %>
    <h2>Attendance for <%= selectedUser.name %>
    </h2>
    <% } else { %>
      <h2>Attendance Management</h2>
      <% } %>


        <form method="GET" class="row justify-content-center align-items-center g-2 mb-4" action="/admin/attendance">
          <div class="col-md-3">
            <input type="text" name="name" value="<%= filters.name %>" class="form-control"
              placeholder="Filter by name" />
          </div>
          <div class="col-md-2">
            <select name="range" class="form-select">
              <option value="">Select Range</option>
              <option value="today" <%=filters.range==='today' ? 'selected' : '' %>>Today</option>
              <option value="week" <%=filters.range==='week' ? 'selected' : '' %>>Last Week</option>
              <option value="month" <%=filters.range==='month' ? 'selected' : '' %>>Last Month</option>
            </select>
          </div>
          <div class="col-md-2">
            <button class="btn btn-primary">Apply Filters</button>
          </div>
          <div class="col-md-2">
            <a href="/admin/attendance" class="btn btn-secondary">Reset</a>
          </div>
          <% if (typeof singleUser !=='undefined' && singleUser) { %>
            <div class="col-md-3 d-flex gap-2">
              <a href="/dashboard" class="btn btn-secondary">â¬… Back to Dashboard</a>
              <!-- ðŸš¨ Delete All Attendance -->
              <form method="POST" action="/admin/attendance/delete-all"
                onsubmit="return confirm('âš ï¸ Are you sure you want to delete ALL attendance records?')" class="mb-3">
                <button type="submit" class="btn btn-danger">Delete All Attendance</button>
              </form>
            </div>
            <% } else { %>
              <!-- ðŸš¨ Delete All Attendance -->
              <div class="col-md-3">
                <form method="POST" action="/admin/attendance/delete-all"
                  onsubmit="return confirm('âš ï¸ Are you sure you want to delete ALL attendance records?')" class="mb-3">
                  <button type="submit" class="btn btn-danger">Delete All Attendance</button>
                </form>
              </div>
              <% } %>
        </form>

        <form method="POST" action="/admin/attendance/mark" class="row g-3 mb-4 align-items-center" id="admin-attendance-form">
          <div class="col-md-5">
            <select name="userId" class="form-select" required>
              <option value="">Select User</option>
              <% users.forEach(user=> { %>
                <option value="<%= user._id %>">
                  <%= user.name %> - <%= user.email %>
                </option>
                <% }) %>
            </select>
          </div>

          <div class="col-md-3">
            <input type="datetime-local" name="date" class="form-control" required />
          </div>



          <!-- Hidden input to set action -->
          <input type="hidden" name="action" id="admin-action-field" />

          <div class="col-md-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-50" onclick="setAction('signin')">Sign In</button>
            <button type="submit" class="btn btn-danger w-50" onclick="setAction('signout')">Sign Out</button>
          </div>
        </form>

        <script>
          function setAction(action) {
            document.getElementById('admin-action-field').value = action;
          }
        </script>


